@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Prijava korisnika";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm p-4" style="min-width: 320px; max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Prijava</h2>

        <form method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="Email" class="form-label">Email adresa</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Unesite email" required />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Lozinka</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Unesite lozinku" required minlength="6" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Prijavi se</button>
            <div class="mt-3 text-center">
                <a href="/Register">Nemate račun? Registrirajte se</a>
            </div>
        </form>
    </div>
</div>
